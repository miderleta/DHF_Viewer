@page
@model DHF_Viewer_WebApp.Pages.Categories.DeleteModel
@{
}

@if(TempData["success"]!=null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}

<form method="post" class="d-flex align-items-center justify-content-center">
    <div class="w-75 p-3">
        <div class="row pb-2">
            <h2 class="text-primary" pl-3">Delete Document</h2>
            <hr />
        </div>
        <div class="mb-3">
            <h5>Please enter Document Number:</h5>
            <label asp-for="UserInput._id" class="mb-1" hidden>Document Number:</label>
            <input asp-for="UserInput._id" class="form-control" required/>
            <span asp-validation-for="UserInput._id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:110px">Delete</button>
        <button type="reset" class="btn btn-outline-primary" style="width:110px" hidden>Reset Form</button>
    </div>
</form>

<div class="d-flex align-items-center justify-content-center">
    <div class="w-75 p-3">
        <h4 class="text-danger">@Model.info</h4>
    </div>
</div>

<table class="table table-bordered table-striped mt-2" style="width:100%">
    <thead>
        <tr>
            <th>Document Number</th>
            <th>Document Title</th>
            <th>Rev</th>
            <th>Type</th>
            <th>Product</th>
        </tr>
    </thead>
    <tbody>
            <tr>
                <td>@Model.UserInput._id</td>
                <td>@Model.UserInput.Title</td>
                <td>@Model.UserInput.Revision</td>
                <td>@Model.UserInput.Type</td>
                <td>@Model.UserInput.Product</td>
            </tr>
    </tbody>
</table>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}