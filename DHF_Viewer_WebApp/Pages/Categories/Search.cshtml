@page
@model DHF_Viewer_WebApp.Pages.Categories.SearchModel
@{
}

@if(TempData["success"]!=null)
{
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="//cdnjs.cloudflare.com/ajax/libs/toastr.js/latest/toastr.min.js"></script>
    <script type="text/javascript">
        toastr.success('@TempData["success"]');
    </script>
}

<!-- Search by Document ID-->
<form method="post" class="d-flex align-items-center justify-content-center">
    <div class="w-75 p-3">
        <div class="row pb-2">
            <h2 class="text-primary" pl-3">Search</h2>
            <hr />
        </div>
        <div class="mb-3">
            <h5>Search By Document Number:</h5>
            <label asp-for="UserInput._id" class="mb-1" hidden>By Document Number:</label>
            <input asp-for="UserInput._id" class="form-control" required/>
            <span asp-validation-for="UserInput._id" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:110px">Search</button>
        <button type="reset" class="btn btn-outline-primary" style="width:110px" hidden>Reset Form</button>
    </div>
</form>

<!-- Search by Document Title-->
<form method="post" class="d-flex align-items-center justify-content-center">
    <div class="w-75 p-3">
       @* <div class="row pb-2">
            <h2 class="text-primary" pl-3">Search</h2>
            <hr />
        </div>*@
        <div class="mb-3">
            <h5>Search by Document Title:</h5>
            <label asp-for="UserInput.Title" class="mb-1" hidden>By Title</label>
            <input asp-for="UserInput.Title" class="form-control" required />
            <span asp-validation-for="UserInput.Title" class="text-danger"></span>
        </div>
        <button type="submit" class="btn btn-outline-primary" style="width:110px">Search</button>
        <button type="reset" class="btn btn-outline-primary" style="width:110px" hidden>Reset Form</button>
    </div>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}