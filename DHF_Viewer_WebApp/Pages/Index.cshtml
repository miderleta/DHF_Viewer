@*This page is the home page of the application.
It displays the main manu of the app and provides 
some information about the number of documents in the database.*@

@page
@model IndexModel

<div class="text-center">
    <h1 class="display-2 pt-5">Welcome</h1>
    <h4>Please select an action:</h4>
    <div class="container align-middle p-3">
        <div class="row pt-4 align-middle">
            <div class="col-6">
                <h4 class="text-end">Search for a Document</h4>
            </div>
            <div class="col-6 text-start">
                <a asp-page="/Categories/Search" class="btn btn-outline-primary ms-5" style="width:110px">Click Here</a>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <h4 class="text-end">Create New Document</h4>
            </div>
            <div class="col-6 text-start">
                <a asp-page="/Categories/Create" class="btn btn-outline-primary ms-5" style="width:110px">Click Here</a>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <h4 class="text-end">Update Document</h4>
            </div>
            <div class="col-6 text-start">
                <a asp-page="/Categories/Edit" class="btn btn-outline-primary ms-5" style="width:110px">Click Here</a>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <h4 class="text-end">Delete Document</h4>
            </div>
            <div class="col-6 text-start">
                <a asp-page="/Categories/Delete" class="btn btn-outline-primary ms-5" style="width:110px">Click Here</a>
            </div>
        </div>
        <div class="row pt-4">
            <div class="col-6">
                <h4 class="text-end">DHF Reports</h4>
            </div>
            <div class="col-6 text-start">
                <a asp-page="/Categories/Report" class="btn btn-outline-primary ms-5" style="width:110px">Click Here</a>
            </div>
        </div>
    </div>
</div>

<div class=" container-sm pt-4">
    <div class="row justify-content-sm-center text-center">
        <div class="col col-md-4">
            <h3>Database info</h3>
        </div>
    </div>
    <div class="row justify-content-sm-center">
        <div class="col col-md-4 pt-0">
            <p class="text-center">Number of Documents in the Database: @Model.receivedData.Result.Doc_Count</p>
        </div>
    </div>
</div>
